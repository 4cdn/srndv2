{{#Reference}}
  <div class="thread reply" id="post_{{PostHash}}">
{{/Reference}}
{{^Reference}}
  <div class="thread op" id="post_{{PostHash}}">
{{/Reference}}
  <p class="intro">
    <label for="delete_{{PostHash}}">
      <span class="subject">
        {{Subject}}
      </span>
      <span class="name">
        {{#Sage}}
          <a href="mailto:sage">
            {{Name}}
          </a>
        {{/Sage}}
        {{^Sage}}
          {{Name}}
        {{/Sage}}
      </span>
      <span class="postdate">
        {{Date}}
      </span>
    </label>
    <a href="{{PostURL}}" onclick="">No. {{ShortHash}}</a>
  </p>
  <div class="files">
    {{#Attachments}}
      <a class="file" href="{{Source}}">
        <img class="file-thumbnail" src="{{Thumbnail}}" alt="{{Filename}}" />
      </a>
    {{/Attachments}}
  </div>
  {{#OP}}
  <div class="thread reply_body">
  {{/OP}}
  {{^OP}}
  <div class="thread op_body">
  {{/OP}}
  {{{RenderBody}}}
  </div>
</div>